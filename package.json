{
  "name": "@pakho12/ts-tempo",
  "type": "module",
  "version": "1.1.2",
  "private": false,
  "packageManager": "pnpm@10.4.0",
  "author": {
    "name": "pakho12",
    "email": "pakho128@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/pakho12/ts-tempo.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "ts",
    "typescript"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "main": "dist/index.umd.cjs",
  "module": "dist/index.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "git:commit": "commit",
    "dependency:up": "taze major -I",
    "clean:dist": "rm -rf dist",
    "build:types": "tsc -P tsconfig.dts.json",
    "build:dist": "pnpm clean:dist && vite build ",
    "build:bundle": "pnpm build:dist && pnpm build:types",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run --silent",
    "test:bench": "vitest bench",
    "test:coverage": "vitest run --coverage",
    "preinstall": "npx only-allow pnpm",
    "postinstall": "npx simple-git-hooks && npx patch-package -y",
    "typecheck": "tsc --noEmit",
    "sizecheck": "npx vite-bundle-visualizer",
    "semantic-release": "semantic-release",
    "prepare": "husky",
    "release": "npx release-it"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.2.0",
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.12",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@commitlint/prompt-cli": "^19.7.1",
    "@release-it/conventional-changelog": "^10.0.0",
    "@total-typescript/ts-reset": "^0.6.1",
    "@vitest/coverage-v8": "3.0.5",
    "@vitest/ui": "3.0.5",
    "cross-env": "^7.0.3",
    "eslint": "^9.20.1",
    "eslint-plugin-format": "^1.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3",
    "patch-package": "^8.0.0",
    "pnpm": "^10.4.0",
    "semantic-release": "^24.2.2",
    "simple-git-hooks": "^2.11.1",
    "taze": "^18.5.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3",
    "vite": "^6.1.0",
    "vite-bundle-visualizer": "^1.2.1",
    "vitest": "^3.0.5"
  },
  "husky": {},
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  },
  "release-it": {
    "git": {
      "requireCleanWorkingDir": true,
      "requireUpstream": true,
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "push": true,
      "tagName": "v${version}"
    },
    "github": {
      "release": true
    },
    "npm": {
      "publish": true,
      "skipChecks": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": {
          "name": "angular"
        }
      }
    }
  }
}
